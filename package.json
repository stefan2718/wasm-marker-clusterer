{
  "name": "wasm-marker-clusterer",
  "author": "Stefan Battiston <stefan.battiston@gmail.com>",
  "description": "A WebAssembly alternative to the popular MarkerClustererPlus library for Google Maps",
  "version": "0.1.3",
  "license": "LGPL-3.0-only",
  "keywords": [
    "wasm",
    "webassembly",
    "google maps",
    "marker-clusterer-plus",
    "clustering"
  ],
  "files": [
    "dist/*"
  ],
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/stefan2718/wasm-marker-clusterer"
  },
  "scripts": {
    "serve": "webpack-dev-server",
    "build": "webpack --mode production",
    "wasm-opt": "wasm-opt -O4 dist/webassembly_marker_clusterer_bg.wasm -o dist/webassembly_marker_clusterer_bg.wasm",
    "prepare": "npm run build && npm run wasm-opt",
    "start": "http-server -a localhost",
    "test:js-lib": "cypress run",
    "test:unit": "cargo test",
    "test:wasm": "wasm-pack test --headless --chrome --release",
    "test": "npm run test:unit && npm run test:wasm"
  },
  "devDependencies": {
    "@types/node": "^12.7.12",
    "@wasm-tool/wasm-pack-plugin": "^1.0.1",
    "copy-webpack-plugin": "^5.0.4",
    "cypress": "^3.5.0",
    "http-server": "^0.11.1",
    "rimraf": "^2.6.3",
    "ts-loader": "^6.2.1",
    "typescript": "^3.6.3",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  }
}
