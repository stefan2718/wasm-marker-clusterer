{
  "name": "wasm-marker-clusterer",
  "author": "Stefan Battiston <stefan.battiston@gmail.com>",
  "description": "A WebAssembly alternative to the popular MarkerClustererPlus library for Google Maps",
  "version": "0.1.3",
  "license": "LGPL-3.0-only",
  "keywords": [
    "wasm",
    "webassembly",
    "google maps",
    "marker-clusterer-plus",
    "clustering"
  ],
  "files": [
    "dist/index*",
    "dist/interfaces.d.ts",
    "pkg/webassembly_marker_clusterer.js",
    "pkg/webassembly_marker_clusterer_bg.wasm"
  ],
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "sideEffects": "false",
  "repository": {
    "type": "git",
    "url": "https://github.com/stefan2718/wasm-marker-clusterer"
  },
  "scripts": {
    "build": "tsc && wasm-pack build --target web",
    "wasm-opt": "wasm-opt -O4 pkg/webassembly_marker_clusterer_bg.wasm -o pkg/webassembly_marker_clusterer_bg.wasm",
    "prepare": "npm run build && rimraf pkg/{[^w]*,.gitignore} && npm run wasm-opt",
    "start": "http-server -a localhost &",
    "test:js-lib": "npm run start & ; cypress run && kill %1",
    "test:unit": "cargo test",
    "test:wasm": "wasm-pack test --headless --chrome --release",
    "test": "cargo test && wasm-pack test --headless --chrome --release"
  },
  "devDependencies": {
    "@types/node": "^12.7.12",
    "cypress": "^3.5.0",
    "http-server": "^0.11.1",
    "rimraf": "^2.6.3",
    "typescript": "^3.6.3"
  }
}
